# 프로덕션 환경 설정
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://recipt.app

# 데이터베이스 (프로덕션 DB 정보로 변경 필요)
DB_HOST=prod-postgres.example.com
DB_PORT=5432
DB_USERNAME=recipt_prod
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_DATABASE=recipt_prod

# Redis (프로덕션 Redis 정보로 변경 필요)
REDIS_HOST=prod-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_DB=0
REDIS_TTL=3600

# JWT (반드시 강력한 시크릿으로 변경)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API 키 (외부 서비스용, 강력한 키로 변경)
API_KEYS=api_key_1,api_key_2,api_key_3

# SMTP (실제 SMTP 서버 정보로 변경)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@recipt.app
SMTP_PASSWORD=CHANGE_THIS_TO_APP_PASSWORD
SMTP_FROM=noreply@recipt.app

# OCR 마이크로서비스
OCR_SERVICE_URL=http://ocr-service:8000

# CORS 설정
ENABLE_CORS=true
CORS_ORIGIN=https://recipt.app,https://www.recipt.app
CORS_CREDENTIALS=true

# Swagger (프로덕션에서는 비활성화 권장)
ENABLE_SWAGGER=false
SWAGGER_PATH=api/docs

# API 설정
API_PREFIX=api
