# =================================================================
# Backend Environment Variables - Production
# 프로젝트: 광남동성당 청소년위원회 예결산 관리 시스템
# 환경: Production
# =================================================================

# Application Configuration
NODE_ENV=production
PORT=8000
API_PREFIX=api

# Database Configuration (프로덕션용 - 실제 값은 배포 시 설정)
DATABASE_HOST=${DB_HOST}
DATABASE_PORT=${DB_PORT}
DATABASE_NAME=${DB_NAME}
DATABASE_USER=${DB_USER}
DATABASE_PASSWORD=${DB_PASSWORD}
DATABASE_SCHEMA=public

# Redis Configuration (프로덕션용)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration (프로덕션용 - 강력한 키 필요)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Configuration (프로덕션용 강력한 설정)
BCRYPT_SALT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=20971520
UPLOAD_DIRECTORY=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
MAX_FILES_PER_UPLOAD=20

# OCR Service Configuration
OCR_SERVICE_URL=${OCR_SERVICE_URL}
OCR_SERVICE_TIMEOUT=60000
OCR_MAX_RETRIES=3

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGIN=${FRONTEND_URL}
CORS_CREDENTIALS=true

# Rate Limiting (프로덕션용 엄격한 설정)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=/app/logs
ENABLE_REQUEST_LOGGING=true

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_NAME=recipt.sid
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=jopark@yencorp.co.kr
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=${SMTP_FROM}
ENABLE_EMAIL=true

# External API Keys
GOOGLE_VISION_API_KEY=${GOOGLE_VISION_API_KEY}
NAVER_CLOVA_API_KEY=${NAVER_CLOVA_API_KEY}

# Production Features
ENABLE_SWAGGER=false
SWAGGER_PATH=api/docs
ENABLE_QUERY_LOGGING=false
ENABLE_ERROR_STACK_TRACE=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_OCR_SERVICE=true

# Performance Configuration
MAX_JSON_SIZE=10mb
MAX_URL_ENCODED_SIZE=10mb
REQUEST_TIMEOUT=30000

# Security Configuration (프로덕션용 강화된 설정)
HELMET_ENABLED=true
CSRF_ENABLED=true
TRUST_PROXY=true

# Timezone
TZ=Asia/Seoul

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=${SSL_CERT_PATH}
SSL_KEY_PATH=${SSL_KEY_PATH}

# Monitoring & Analytics
SENTRY_DSN=${SENTRY_DSN}
ENABLE_SENTRY=true
ENABLE_METRICS=true
METRICS_PORT=9090