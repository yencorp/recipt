# =================================================================
# Backend Environment Variables - Test
# 프로젝트: 광남동성당 청소년위원회 예결산 관리 시스템
# 환경: Test
# =================================================================

# Application Configuration
NODE_ENV=test
PORT=8080
API_PREFIX=api

# Database Configuration (테스트용 별도 DB)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=recipt_test_db
DATABASE_USER=recipt
DATABASE_PASSWORD=recipt123
DATABASE_SCHEMA=public
TEST_DATABASE_NAME=recipt_test_db

# Redis Configuration (테스트용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=1
REDIS_TTL=300

# JWT Configuration (테스트용 단순한 값)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# Bcrypt Configuration (테스트용 빠른 설정)
BCRYPT_SALT_ROUNDS=1

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIRECTORY=./test-uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
MAX_FILES_PER_UPLOAD=5

# OCR Service Configuration
OCR_SERVICE_URL=http://localhost:8001
OCR_SERVICE_TIMEOUT=10000
OCR_MAX_RETRIES=1

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting (테스트용 관대한 설정)
THROTTLE_TTL=60
THROTTLE_LIMIT=10000

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_PATH=./test-logs
ENABLE_REQUEST_LOGGING=false

# Session Configuration
SESSION_SECRET=test-session-secret
SESSION_NAME=test.sid
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false

# Email Configuration (테스트용 비활성화)
ENABLE_EMAIL=false

# External API Keys (테스트용 빈 값)
GOOGLE_VISION_API_KEY=
NAVER_CLOVA_API_KEY=

# Test Features
ENABLE_SWAGGER=false
SWAGGER_PATH=api/docs
ENABLE_QUERY_LOGGING=false
ENABLE_ERROR_STACK_TRACE=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=false
HEALTH_CHECK_OCR_SERVICE=false

# Performance Configuration
MAX_JSON_SIZE=5mb
MAX_URL_ENCODED_SIZE=5mb
REQUEST_TIMEOUT=10000

# Security Configuration (테스트용 느슨한 설정)
HELMET_ENABLED=false
CSRF_ENABLED=false
TRUST_PROXY=false

# Timezone
TZ=Asia/Seoul