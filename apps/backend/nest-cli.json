{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "**/*.hbs",
      "**/*.json"
    ]
  },
  "generateOptions": {
    "spec": true,
    "flat": false
  }
}