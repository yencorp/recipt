# =================================================================
# Frontend Environment Variables - Development
# 프로젝트: 광남동성당 청소년위원회 예결산 관리 시스템
# 환경: Development
# =================================================================

# Application Configuration
NODE_ENV=development
VITE_APP_NAME="광남동성당 예결산 관리 시스템"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="청소년위원회 행사 예결산 관리 플랫폼"

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000
VITE_API_RETRY_COUNT=3

# OCR Service Configuration
VITE_OCR_SERVICE_URL=http://localhost:8001/api
VITE_OCR_MAX_FILE_SIZE=10485760
VITE_OCR_ALLOWED_TYPES=jpg,jpeg,png,pdf
VITE_OCR_MAX_FILES=10

# Authentication Configuration
VITE_JWT_STORAGE_KEY=recipt_token
VITE_REFRESH_TOKEN_KEY=recipt_refresh_token
VITE_TOKEN_EXPIRY_BUFFER=300000

# UI/UX Configuration
VITE_DEFAULT_LANGUAGE=ko
VITE_TIMEZONE=Asia/Seoul
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss
VITE_CURRENCY_FORMAT=KRW

# File Upload Configuration
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,xlsx,xls,csv
VITE_UPLOAD_CHUNK_SIZE=1048576

# Development Features
VITE_ENABLE_DEBUG=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_CONSOLE_LOG_LEVEL=debug

# Toast/Notification Configuration
VITE_TOAST_POSITION=top-right
VITE_TOAST_DURATION=5000
VITE_TOAST_MAX_COUNT=5

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
VITE_PAGE_SIZE_OPTIONS=10,20,50,100

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_SWITCHING=true
VITE_PRIMARY_COLOR=#0066cc
VITE_SECONDARY_COLOR=#28a745

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_IMAGE_LAZY_LOADING=true
VITE_VIRTUAL_SCROLLING_THRESHOLD=100

# Analytics Configuration (Development - Disabled)
VITE_ENABLE_ANALYTICS=false
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=

# Error Handling Configuration
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_ERROR_REPORTING=false
VITE_SENTRY_DSN=

# Cache Configuration
VITE_CACHE_ENABLE=true
VITE_CACHE_DURATION=300000
VITE_CACHE_MAX_SIZE=50

# Development Server Configuration
VITE_HOST=0.0.0.0
VITE_PORT=3000
VITE_OPEN_BROWSER=false
VITE_FORCE_HTTPS=false

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_ANALYZE=false

# Feature Flags (Development)
VITE_ENABLE_EXPERIMENTAL_FEATURES=true
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_A11Y_TOOLS=true

# Organization Information
VITE_ORG_NAME="광남동성당 청소년위원회"
VITE_ORG_ADDRESS="서울특별시 강남구"
VITE_ORG_CONTACT="contact@recipt.com"

# External Service URLs (Development)
VITE_HELP_CENTER_URL=http://localhost:3000/help
VITE_SUPPORT_EMAIL=dev-support@recipt.com
VITE_DOCUMENTATION_URL=http://localhost:3000/docs

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSRF_TOKEN_KEY=_csrf