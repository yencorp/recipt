# =================================================================
# OCR 서비스 개발 환경 설정
# 프로젝트: 광남동성당 청소년위원회 예결산 관리 시스템
# =================================================================

# 서버 설정
HOST=0.0.0.0
PORT=8001
DEBUG=true
WORKERS=1

# OCR 엔진 설정
OCR_ENGINE=tesseract
OCR_LANG=kor+eng
OCR_CONFIG=--oem 3 --psm 6

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=10
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]

# 이미지 처리 설정
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
IMAGE_QUALITY=85

# 디렉토리 설정
UPLOAD_DIR=./uploads
LOG_DIR=./logs
TEMP_DIR=./temp

# CORS 설정
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://recipt-frontend-dev:3000","http://recipt-backend-dev:8000"]

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ACCESS_LOG=true

# 헬스체크 설정
HEALTH_CHECK_INTERVAL=30

# 외부 서비스 설정
BACKEND_API_URL=http://recipt-backend-dev:8000/api

# 성능 설정
OCR_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=5

# 보안 설정
API_KEY_HEADER=X-API-Key
ENABLE_API_KEY=false

# 개발 전용 설정
ENABLE_RELOAD=true
ENABLE_DEBUG_ENDPOINT=true